<%= render "shared/header" %>
 <div class="new-post-contents">
    <h2 class="new-posts-title"><%= @name %>さんの投稿一覧</h2>
    <ul class='post-lists'>
      <% @posts.each do |post| %>
        <li class='post-list'>
          <%= link_to post_path(post.id) do %>
          <div class='post-img-content'>
            <%= image_tag post.image, class: "post-img" %>
          </div>
          
          <div class='post-info'>
            <div class='post-info-head'>
              <div class='museum-name'>
                <%= post.museum_name %>
              </div>
            </div>
            <%# 星の表示 %>
            <div id="star-rate<%= post.id %>"></div>    
              <script>
                $('#star-rate<%= post.id%>').raty({
                  size      : 10,
                  starOff   : '<%= asset_path('star-off.png') %>',
                  starOn    : '<%= asset_path('star-on.png') %>',
                  starHalf  : '<%= asset_path('star-half.png') %>',
                  half      : true,
                  readOnly: true,
                  score: <%= post.rating %>,
                });
              </script>
            </div>
            <%# //星の表示 %>
            <div class='user-name'>
              by <%= post.user.name %>
            </div>
            <%# お気に入り %>
            <tr id="post_<%= post.id %>">
              <%= render 'posts/favorite', post: post %>
            </tr>
            <%# //お気に入り %>
          <% end %>        
        </li>
      <% end %>
    </ul>
  </div>
  <%# 投稿一覧 %>