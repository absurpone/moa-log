<header class="top-page-header">
  <div class='search-bar-contents'>
    <%= link_to 'MoALog', root_path, class:'moalog-icon'%>    
    <%= form_with(url: search_posts_path, local: true, method: :get, class: "search-form") do |form| %>
      <%= form.text_field :keyword,  placeholder: "キーワードから探す", class: "input-box" %>
      <button class="search-btn">
        <i class="fas fa-search"></i>
      </button>
    <% end %>
    <div class="nav">
    <% if user_signed_in? %>  
      <ul class='lists-right'>
        <li><%= link_to 'お気に入り一覧', favorites_index_path, class: "header-user-name" %> </li>
        <li><%= link_to 'マイページ', user_path(current_user.id), class: "header-user-name" %> </li>
        <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "log-out" %></li>
        <li><%= link_to '新規投稿', new_post_path, class: "new-post" %></li>
      </ul>
    <% else %>
      <ul class='lists-right'>
        <li><%= link_to 'サインアップ', new_user_registration_path, class: "sign-up" %></li>
        <li><%= link_to 'ログイン', new_user_session_path, class: "log-in" %></li>
      </ul>
    <% end %>
    </div>
  </div>
</header>