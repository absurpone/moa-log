<header class="top-page-header">
  <div class='search-bar-contents'>
    <%= link_to 'MoALog', root_path, class:'moalog-icon'%>    
    <%= form_with(url: search_posts_path, local: true, method: :get, class: "search-form") do |form| %>
      <%= form.text_field :keyword,  placeholder: "キーワードから探す", class: "input-box" %>
      <button class="search-btn">
        <i class="fas fa-search"></i>
      </button>
    <% end %>
    <div class="nav">
      <div class="new-post-btn">
        <%= link_to new_post_path, title: '新規投稿' do %>
          <i class="fa fa-edit "></i> 
        <% end %>
      </div>
      <div class="hamburger-menu">
          <input type="checkbox" id="menu-btn-check" name="check-btn">
          <label for="menu-btn-check" class="menu-btn"><span></span></label>
          <div class="menu-content">
            <% if user_signed_in? %>    
              <ul>
                <li><%= link_to '新規投稿', new_post_path %></li>
                <li><%= link_to 'お気に入り一覧', favorites_index_path %> </li>
                <li><%= link_to 'マイページ', user_path(current_user.id) %> </li>
                <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete %></li>
              </ul>
            <% else %>
              <ul>
                <li><%= link_to 'ログイン', new_user_session_path, class: "log-in" %></li>
                <li><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
              </ul>
            <% end %>
          </div>
      </div>
    </div>
  </div>
</header>