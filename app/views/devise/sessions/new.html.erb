<%= render "shared/header" %>
<div class="new-post-contents">
  <h2 class="page-heading">ログイン</h2>
  
      
    <%# ログイン時のエラーメッセージ  %>
    <div class='login-flash-message'>
      <%= flash[:notice] %>
      <%= flash[:alert] %>
    </div>
  <%= form_with model: @user, url: user_session_path, id: 'new_user', class: 'new_user', local: true do |f| %>
    
    <div class="user-info-input">
      <div class="weight-bold-text">
        e-mail
      </div>
      <%= f.email_field :email, class: 'user-input' %>
    </div>

    <div class="user-info-input">
      <div class="weight-bold-text">
        パスワード（半角英数字6文字以上）
      </div>
      <%= f.password_field :password, autocomplete: "off", class: 'user-input' %>
    </div>
    <div class="post-btn-contents">
      <%= f.submit "ログイン", class:"post-btn" %>
    </div>
  <% end %>
</div>
<%= render "shared/footer" %>