<%= render "shared/header" %>
<div class="new-post-contents">
  <h2 class="page-heading">新規ユーザー登録</h2>
  <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>    <%= render 'shared/error_messages', model: f.object %>
    <div class="user-info-input">
      <div class="weight-bold-text">
        ニックネーム
      </div>
      <%= f.text_field :name, class: 'user-input' %>
    </div>
    
    <div class="user-info-input">
      <div class="weight-bold-text">
        e-mail
      </div>
      <%= f.email_field :email, class: 'user-input' %>
    </div>

    <div class="user-info-input">
      <div class="weight-bold-text">
        パスワード（半角英数字6文字以上）
      </div>
      <%= f.password_field :password, autocomplete: "off", class: 'user-input' %>
    </div>

    <div class="user-info-input">
      <div class="weight-bold-text">
        パスワード再入力
      </div>
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'user-input' %>
    </div>

    <div class="post-btn-contents">
      <%= f.submit "新規登録", class:"post-btn" %>
    </div>
  <% end %>
</div>
<%= render "shared/footer" %>














    